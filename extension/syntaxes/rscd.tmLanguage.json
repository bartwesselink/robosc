{
	"name": "Robot Supervisory Controller DSL",
    "scopeName": "source.rscd",
    "fileTypes": ["rscd"],
    "repository": {
        "general": {
            "patterns": [
                {
                    "include": "#linecomment"
                },
                {
                    "include": "#blockcomment"
                },
                {
                    "include": "#keyword"
                }
            ]
        },
        "linecomment": {
            "name": "comment.line.double-dash.rscd",
            "begin": "(^[ \\t]+)?(?=//)",
			"end": "(?=$)"
        },
        "blockcomment": {
            "name": "comment.block.rscd",
            "begin": "/\\*(\\*)?(?!/)",
			"end": "\\*/"
        },
        "keyword": {
            "name": "keyword.control.rscd",
            "match": "\\b(string|double|false|integer|none|robot|component|library|boolean|array|true)\\b"
        }
    },
    "patterns": [
        {
            "include": "#general"
        }
    ]
}
