{
	"name": "Robot Supervisory Controller DSL",
    "scopeName": "source.rscd",
    "fileTypes": ["rscd"],
    "repository": {
        "general": {
            "patterns": [
                {
                    "include": "#linecomment"
                },
                {
                    "include": "#blockcomment"
                },
                {
                    "include": "#keyword"
                }
            ]
        },
        "linecomment": {
            "name": "comment.line.double-dash.rscd",
            "begin": "(^[ \\t]+)?(?=//)",
			"end": "(?=$)"
        },
        "blockcomment": {
            "name": "comment.block.rscd",
            "begin": "/\\*(\\*)?(?!/)",
			"end": "\\*/"
        },
        "keyword": {
            "name": "keyword.control.rscd",
            "match": "\\b(do|integer|none|robot|feedback|action|from|state|if|needs|incoming|double|disables|enum|provide|true|object|outgoing|request|import|string|default|library|goto|array|datatype|and|value|on|or|initial|false|requirement|message|transition|with|component|boolean|service|response|variable|behaviour|to)\\b"
        }
    },
    "patterns": [
        {
            "include": "#general"
        }
    ]
}
