{
	"name": "Robot Supervisory Controller DSL",
    "scopeName": "source.rscd",
    "fileTypes": [
        "rscd"
    ],
    "repository": {
        "general": {
            "patterns": [
                {
                    "include": "#linecomment"
                },
                {
                    "include": "#blockcomment"
                },
                {
                    "include": "#keyword"
                }
            ]
        },
        "linecomment": {
            "name": "comment.line.double-dash.robot-supervisory-controller",
            "begin": "(^[ \\t]+)?(?=//)",
			"end": "(?=$)"
        },
        "blockcomment": {
            "name": "comment.block.robot-supervisory-controller",
            "begin": "/\\*(\\*)?(?!/)",
			"end": "\\*/"
        },
        
        "keyword": {
            "name": "keyword.control.robot-supervisory-controller",
            "match": "\\b(Hello|from)\\b|!"

        }
    },
    "patterns": [
        {
            "include": "#general"
        }
    ],
    "uuid": "8383e49a-fa0d-4bb5-827b-10e8abb294ca"
}